// Icon with lowest ID value placed first to ensure application icon
// remains consistent on all systems.
IDI_MAINICON            ICON                    "TTB_color.ico"
IDI_TRAYWHITEICON       ICON                    "TTB_white.ico"
IDI_TRAYBLACKICON       ICON                    "TTB_black.ico"


/////////////////////////////////////////////////////////////////////////////
//
// Version
//

VS_VERSION_INFO VERSIONINFO
	FILEVERSION APP_VERSION_FIXED
	PRODUCTVERSION APP_VERSION_FIXED
	FILEFLAGSMASK VS_FFI_FILEFLAGSMASK
#ifdef _DEBUG
	FILEFLAGS VS_FF_DEBUG
#endif
	FILEOS VOS_NT_WINDOWS32
	FILETYPE VFT_APP
{
	BLOCK "StringFileInfo"
	{
		BLOCK "000004B0"
		{
			VALUE "FileDescription", APP_NAME
			VALUE "FileVersion", APP_VERSION
			VALUE "InternalName", APP_NAME ".exe"
			VALUE "OriginalFilename", APP_NAME ".exe"
			VALUE "ProductName", APP_NAME
			VALUE "ProductVersion", APP_VERSION
		}
		BLOCK "040904b0"
		{
			VALUE "Comments", "A lightweight utility that makes the Windows taskbar translucent/transparent."
			VALUE "CompanyName", APP_NAME " Open Source Developers"
			VALUE "LegalCopyright", "Copyright Â© " APP_COPYRIGHT_YEAR " " APP_NAME " Open Source Developers"
		}
	}
	BLOCK "VarFileInfo"
	{
		VALUE "Translation", 0x0000, CP_WINUNICODE
		VALUE "Translation", 0x0409, CP_WINUNICODE
	}
}


