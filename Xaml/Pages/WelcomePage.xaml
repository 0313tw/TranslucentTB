<local:FramelessPage
    x:Class="TranslucentTB.Xaml.Pages.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TranslucentTB.Xaml.Pages"
    xmlns:controls="using:TranslucentTB.Xaml.Controls"
    xmlns:models="using:TranslucentTB.Xaml.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="635" Height="450">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.ColumnSpan="2" Orientation="Vertical" Spacing="15">
            <RichTextBlock TextWrapping="Wrap" IsTextSelectionEnabled="False">
                <Paragraph>
                    By default, TranslucentTB darkens the taskbar a bit when there is a maximised window.
                    You can alter this behavior, and many other settings, by editing the configuration file now or by using the tray icon (which will appear after accepting the license).
                </Paragraph>
                <Paragraph Margin="0,6,0,0">
                    Before using TranslucentTB, you must agree to the terms set forth by our license, the
                    <Hyperlink NavigateUri="https://github.com/TranslucentTB/TranslucentTB/blob/release/LICENSE.md" ToolTipService.ToolTip="Click here to open the license terms in your browser">GPLv3</Hyperlink>. Press "I agree" below to continue.
                </Paragraph>
            </RichTextBlock>

            <controls:ActionList>
                <models:Action Name="Donate to the project on Liberapay" Description="Show us your support by offering a single-time or recurring donation" Click="OpenLiberapayLink">
                    <PathIcon Data="{StaticResource LiberapayLogo}" />
                </models:Action>
                <models:Action Name="Join our Discord server" Description="Chat with the developers and get technical assistance with the program" Click="OpenDiscordLink">
                    <PathIcon Data="{StaticResource DiscordLogo}" />
                </models:Action>
                <models:Action Name="Edit the configuration file" Description="You can always do this by clicking 'Advanced > Edit settings' in the tray icon's context menu&#10;Changes are automatically reloaded as you edit the file" Click="EditConfigFile">
                    <PathIcon Data="{StaticResource EditIcon}" />
                </models:Action>
            </controls:ActionList>
        </StackPanel>

        <CheckBox Grid.Row="1" Content="Automatically start TranslucentTB at system bootup" IsChecked="True" x:Name="StartupCheckbox" />
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="10">
            <Button Width="100" Style="{ThemeResource AccentButtonStyle}" Click="AgreeButtonClicked">I agree</Button>
            <Button Width="100" Click="DisagreeButtonClicked">I disagree</Button>
        </StackPanel>
    </Grid>
</local:FramelessPage>
