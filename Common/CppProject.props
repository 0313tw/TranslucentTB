<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <ItemGroup Label="ProjectConfigurations">
    <ProjectConfiguration Include="Debug|ARM">
      <Configuration>Debug</Configuration>
      <Platform>ARM</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Debug|ARM64">
      <Configuration>Debug</Configuration>
      <Platform>ARM64</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Debug|Win32">
      <Configuration>Debug</Configuration>
      <Platform>Win32</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Debug|x64">
      <Configuration>Debug</Configuration>
      <Platform>x64</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Release|ARM">
      <Configuration>Release</Configuration>
      <Platform>ARM</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Release|ARM64">
      <Configuration>Release</Configuration>
      <Platform>ARM64</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Release|Win32">
      <Configuration>Release</Configuration>
      <Platform>Win32</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Release|x64">
      <Configuration>Release</Configuration>
      <Platform>x64</Platform>
    </ProjectConfiguration>
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <UseDebugLibraries>true</UseDebugLibraries>
    <LinkIncremental>true</LinkIncremental>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <UseDebugLibraries>false</UseDebugLibraries>
    <LinkIncremental>false</LinkIncremental>
    <WholeProgramOptimization>true</WholeProgramOptimization>
  </PropertyGroup>

  <PropertyGroup Label="Globals">
    <CharacterSet>Unicode</CharacterSet>
    <Keyword>Win32Proj</Keyword>
    <DefaultLanguage>en-US</DefaultLanguage>
    <CodeAnalysisRuleSet>AllRules.ruleset</CodeAnalysisRuleSet>
    <SpectreMitigation>Spectre</SpectreMitigation>

    <!-- Versions -->
    <PlatformToolset>v142</PlatformToolset>
    <VCProjectVersion>16.0</VCProjectVersion>
    <MinimumVisualStudioVersion>16.0</MinimumVisualStudioVersion>
    <WindowsTargetPlatformVersion>10.0.18362.0</WindowsTargetPlatformVersion>
    <WindowsTargetPlatformMinVersion>10.0.18362.0</WindowsTargetPlatformMinVersion>

    <!-- WinRT -->
    <CppWinRTLibs>false</CppWinRTLibs>
    <CppWinRTFastAbi>true</CppWinRTFastAbi>
    <CppWinRTOptimized>true</CppWinRTOptimized>
    <CppWinRTRootNamespaceAutoMerge>true</CppWinRTRootNamespaceAutoMerge>
    <ComputeCompileInputsTargets>$(ComputeCompileInputsTargets);EnableWinRTLeanAndMean</ComputeCompileInputsTargets>
  </PropertyGroup>

  <Import Project="$(VCTargetsPath)\Microsoft.Cpp.Default.props" />

  <PropertyGroup>
    <!-- Avoid x86 using a different output directory because it feels special -->
    <OutDir>$(SolutionDir)$(PlatformTarget)\$(Configuration)\</OutDir>
    <IntDir>$(PlatformTarget)\$(Configuration)\</IntDir>

    <!-- Never use UWP triplet -->
    <VcpkgTriplet>$(PlatformTarget)-windows</VcpkgTriplet>
  </PropertyGroup>

  <Import Project="$(VCTargetsPath)\Microsoft.Cpp.props" />
  <Import Project="$(VCTargetsPath)\Microsoft.Cpp.targets" />

  <ItemDefinitionGroup Condition="'$(Configuration)'=='Debug'">
    <Link>
      <!-- Debug information -->
      <GenerateDebugInformation>DebugFastLink</GenerateDebugInformation>

      <!-- Optimization -->
      <OptimizeReferences>false</OptimizeReferences>
    </Link>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup Condition="'$(Configuration)'=='Release'">
    <ClCompile>
      <!-- Warnings and errors -->
      <TreatWarningAsError>true</TreatWarningAsError>

      <!-- Security -->
      <ControlFlowGuard>Guard</ControlFlowGuard>

      <!-- Optimization -->
      <FunctionLevelLinking>true</FunctionLevelLinking>
      <IntrinsicFunctions>true</IntrinsicFunctions>
      <OmitFramePointers>true</OmitFramePointers>
      <Optimization>MaxSpeed</Optimization>
    </ClCompile>
    <Link>
      <!-- Warnings and errors -->
      <TreatLinkerWarningAsErrors>true</TreatLinkerWarningAsErrors>

      <!-- Debug information -->
      <GenerateDebugInformation>DebugFull</GenerateDebugInformation>

      <!-- Optimization -->
      <EnableCOMDATFolding>true</EnableCOMDATFolding>
      <LinkTimeCodeGeneration>UseLinkTimeCodeGeneration</LinkTimeCodeGeneration>
      <OptimizeReferences>true</OptimizeReferences>
    </Link>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup Condition="'$(Platform)'=='Win32' Or '$(Platform)'=='x64'">
    <ClCompile>
      <!-- Windows requires SSE2 on any x86 processor, see https://docs.microsoft.com/windows-hardware/manufacture/desktop/paenxsse2-support-requirement-guide-for-windows-8 -->
      <PreprocessorDefinitions>RAPIDJSON_SSE2;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
    <Link>
      <!-- Enable shadow stacks -->
      <AdditionalOptions>/CETCOMPAT %(AdditionalOptions)</AdditionalOptions>
    </Link>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup Condition="'$(Platform)'=='ARM' Or '$(Platform)'=='ARM64'">
    <ClCompile>
      <!-- Windows requires NEON on any ARM processor, see https://docs.microsoft.com/cpp/build/overview-of-arm-abi-conventions -->
      <PreprocessorDefinitions>RAPIDJSON_NEON;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup Label="Globals">
    <ClCompile>
      <MultiProcessorCompilation>true</MultiProcessorCompilation>
      <PrecompiledHeaderFile>pch.h</PrecompiledHeaderFile>
      <PrecompiledHeaderOutputFile>$(IntDir)pch.pch</PrecompiledHeaderOutputFile>
      <SDLCheck>true</SDLCheck>

      <!-- Language version and conformance -->
      <LanguageStandard>stdcpplatest</LanguageStandard>
      <ConformanceMode>true</ConformanceMode>
      <AdditionalOptions>/await /Zc:__cplusplus %(AdditionalOptions)</AdditionalOptions>

      <!-- Warnings and errors -->
      <WarningLevel>Level4</WarningLevel>
      <DisableSpecificWarnings>4200;4275;4324;4840;5054</DisableSpecificWarnings>
      <UseFullPaths>true</UseFullPaths>
      <DiagnosticsFormat>Caret</DiagnosticsFormat>

      <!-- {fmt} -->
      <PreprocessorDefinitions>FMT_STRING_ALIAS=1;%(PreprocessorDefinitions)</PreprocessorDefinitions>

      <!-- RapidJSON -->
      <PreprocessorDefinitions>RAPIDJSON_HAS_STDSTRING=1;RAPIDJSON_ERROR_CHARTYPE=wchar_t;RAPIDJSON_ERROR_STRING=UTIL_WIDEN;%(PreprocessorDefinitions)</PreprocessorDefinitions>

      <!-- spdlog -->
      <PreprocessorDefinitions>SPDLOG_DISABLE_DEFAULT_LOGGER;SPDLOG_FMT_EXTERNAL;SPDLOG_NO_ATOMIC_LEVELS;SPDLOG_NO_NAME;SPDLOG_NO_THREAD_ID;SPDLOG_NO_TLS;SPDLOG_WCHAR_TO_UTF8_SUPPORT;%(PreprocessorDefinitions)</PreprocessorDefinitions>

      <!-- wil -->
      <PreprocessorDefinitions>RESULT_SUPPRESS_STATIC_INITIALIZERS;%(PreprocessorDefinitions)</PreprocessorDefinitions>

      <!-- Windows -->
      <PreprocessorDefinitions>STRICT_TYPED_ITEMIDS;NOMINMAX;_WINDOWS;WIN32_LEAN_AND_MEAN;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>

  <!-- Enable lean and mean WinRT only if the project does not contains files needing full WinRT -->
  <Target Name="EnableWinRTLeanAndMean" Condition="'@(ClCompile)' != ''">
    <ItemGroup Condition="'@(Page)' == '' And '@(ApplicationDefinition)' == ''">
      <ClCompile>
        <PreprocessorDefinitions>WINRT_LEAN_AND_MEAN;%(PreprocessorDefinitions)</PreprocessorDefinitions>
      </ClCompile>
    </ItemGroup>
  </Target>

  <ImportGroup Label="Shared">
    <Import Project="Common.vcxitems" Label="Shared" />
  </ImportGroup>
</Project>